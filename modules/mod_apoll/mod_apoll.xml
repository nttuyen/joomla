<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="1.6.0" client="site" method="upgrade">
    <name>aPoll Module</name>
    <author>Hristo Genev</author>
    <creationDate>January 2011</creationDate>
    <copyright>Copyright (C) 2009</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <authorEmail>harrygg@gmail.com</authorEmail>
    <authorUrl>www.afactory.org</authorUrl>
    <version>3.0.0</version>
    <description>MOD_APOLL_XML_DESCRIPTION</description>

    <files>
            <filename module="mod_apoll">mod_apoll.php</filename>
            <filename module="mod_apoll">index.html</filename>
            <filename module="mod_apoll">helper.php</filename>
            <filename module="mod_apoll">mod_apoll.xml</filename>
            <folder module="mod_apoll">tmpl</folder>
    </files>

    <languages folder="language">
            <language tag="en-GB">en-GB.mod_apoll.ini</language>
            <language tag="en-GB">en-GB.mod_apoll.sys.ini</language>
    </languages>

    <help key="JHELP_EXTENSIONS_MODULE_MANAGER_WEBLINKS" />
    
    <config>
        <fields name="params">
            <fieldset name="basic" addfieldpath="/administrator/components/com_apoll/models/fields">

                <field name="poll_id" type="pollslist" label="MOD_APOLL_SELECT_POLL_LABEL" description="MOD_APOLL_SELECT_POLL_DESC" />

                <field name="show_poll_title" type="radio" default="1" label="MOD_APOLL_SHOW_POLL_TITLE_LABEL"
                    description="MOD_APOLL_SHOW_POLL_TITLE_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>

                <field type="spacer" />
                
                <field name="show_total" type="radio" default="1" label="MOD_APOLL_SHOW_TOTAL_LABEL"
                    description="MOD_APOLL_SHOW_TOTAL_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field name="show_msg" type="radio" default="1" label="MOD_APOLL_SHOW_MESSAGES_LABEL"
                    description="MOD_APOLL_SHOW_MESSAGES_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
            </fieldset>

            <fieldset group="advanced">
                <field name="layout" type="modulelayout" size="5" label="JFIELD_ALT_LAYOUT_LABEL"
                    description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
                <field name="moduleclass_sfx" type="text" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                    description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
                <field name="cache" type="list" default="1" label="COM_MODULES_FIELD_CACHING_LABEL"
                    description="COM_MODULES_FIELD_CACHING_DESC">
                    <option value="1">JGLOBAL_USE_GLOBAL</option>
                    <option value="0">COM_MODULES_FIELD_VALUE_JNOCACHING</option>
                </field>
                <field name="cache_time" type="text" default="900" label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
                    description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
                <field name="cachemode" type="hidden" default="static">
                    <option value="static"></option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
