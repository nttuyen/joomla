<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="1.6.0"
	client="site"
	method="upgrade">
	<name>Hanhphuc.vn categories</name>
	<author>Ng Xuan Mui</author>
	<creationDate>May 2010</creationDate>
	<copyright>Copyright (C) 2005 - 2010 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>nguyenxuanmui@gmail.com</authorEmail>
	<authorUrl>www.thongtinonline.net</authorUrl>
	<version>1.6.0</version>
	<description>List Categories for Hanhphuc.vn</description>
	<files>
		<filename
			module="mod_hp_categories">mod_hp_categories.php</filename>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
		<filename>index.php</filename>
		<filename>mod_hp_categories.xml</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				
				<field
					name="set_menu_position"
					type="radio"
					default="left"
					label="Set Menu Position"
					description="Set categories menu in top, left or right">
					
					<option value="left">Left</option>
					<option value="right">Right</option>
					<option value="top">Top</option>
				</field>
				<field
					name="category_type"
					type="text"
					label="Category type"
					description="Category type" />
			</fieldset>
			<fieldset
				name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field
					name="cache"
					type="list"
					default="0"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
