<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="1.6" method="new">
    <name>aPoll</name>
    <creationDate>January 2011</creationDate>
    <author>Hristo Genev</author>
    <authorEmail>harrygg@gmail.com</authorEmail>
    <authorUrl>http://www.afactory.org</authorUrl>
    <copyright>Hristo Genev. All rights reserved.</copyright>
    <license>GPL/GNU</license>
    <version>3.0.0</version>
    <description>aPoll lite is a component for creating polls. Enjoy it!</description>
    <install> <!-- Runs on install -->
            <sql>
                 <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
            </sql>
    </install>
    <uninstall> <!-- Runs on uninstall -->
            <sql>
                 <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
            </sql>
    </uninstall>
    <update> <!-- Runs on update -->
            <sql>
                 <file driver="mysql" charset="utf8">sql/update.mysql.utf8.sql</file>
            </sql>
    </update>

    <files folder="site">
            <filename>controller.php</filename>
            <filename>apoll.php</filename>
            <filename>index.html</filename>
            <folder>models</folder>
            <folder>views</folder>
    </files>

    <administration>
        <menu img="administrator/components/com_apoll/assets/apoll.png">APOLL</menu>
        <submenu>
            <menu view="polls" img="administrator/components/com_apoll/assets/apoll.png" alt="aPoll/Polls">COM_APOLL_POLLS</menu>
            <menu link="option=com_categories&amp;extension=com_apoll"
                    view="categories" img="class:categories" alt="aPoll/Categories">COM_APOLL_CATEGORIES</menu>
        </submenu>

            <files folder="admin">
                <!-- Site Main File Copy Section -->
                <filename>access.xml</filename>
                <filename>apoll.php</filename>
                <filename>config.xml</filename>
                <filename>controller.php</filename>
                <filename>index.html</filename>
                <folder>assets</folder>
                <folder>controllers</folder>
                <folder>elements</folder>
                <folder>models</folder>
                <folder>helpers</folder>
                <folder>tables</folder>
                <folder>views</folder>
                <folder>sql</folder>
            </files>
            <languages folder="language/admin">
                <language tag="en-GB">en-GB.com_apoll.ini</language>
                <language tag="en-GB">en-GB.com_apoll.sys.ini</language>
            </languages>
    </administration>
</extension>
